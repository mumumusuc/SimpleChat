<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CallActivityTheme" parent="AppTheme">
        <!--<item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:windowIsTranslucent">false</item>-->
    </style>

    <style name="InputTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
