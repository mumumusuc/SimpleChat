<?xml version="1.0" encoding="utf-8"?>
<com.mumu.simplechat.bean.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_max_height"
    android:background="@drawable/common_bg"
    android:backgroundTint="@color/colorPrimary"
    android:elevation="8dp"
    app:showLeftDrawable="false"
    app:showLeftText="false"
    app:showRightDrawable="false"
    app:showRightText="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_make_phone_call"
        android:gravity="center_vertical"
        android:text="拨打电话"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:id="@+id/conversation_make_phone_call"
        android:textColor="#FFF" />
</com.mumu.simplechat.bean.TitleBar>
