<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/title_bar_left_action"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_bar_left_icon"
            android:layout_width="@dimen/title_icon_size"
            android:layout_height="@dimen/title_icon_size"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/title_bar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:textColor="#fff"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:maxWidth="500dp"
        android:textColor="#fff"
        style="@style/TextAppearance.AppCompat.Medium"/>

    <LinearLayout
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/title_bar_right_action"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/title_bar_right_icon"
        android:layout_width="@dimen/title_icon_size"
        android:layout_height="@dimen/title_icon_size"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_right" />

    <TextView
        android:id="@+id/title_bar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:maxLines="1"
        android:maxWidth="100dp"
        android:textColor="#fff"
        android:textSize="@dimen/title_text_size" />
    </LinearLayout>
</merge>